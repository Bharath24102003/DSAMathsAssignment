public class main
{
  public static void main(String[] args)
  {
    int a,b,c;
    Scanner sc=new Scanner(System.in);
    a=sc.nextInt();
    b=sc.nextInt();
    c=sc.nextInt();
    System.out.println(fact(a)/(fact(b)*fact(a-b))%c);
  }
  private static int fact(int n)
  {
    if(n==1) return 1;
    return n*fact(n-1);
  }
} 
